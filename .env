# MySQL Configuration
MYSQL_DATABASE=wordpress_db
MYSQL_USER=wordpress_user
MYSQL_PASSWORD=your_strong_password_here
MYSQL_ROOT_PASSWORD=your_strong_root_password_here

# WordPress Configuration
WORDPRESS_DEBUG=0
WORDPRESS_CONFIG_EXTRA=
  define('WP_MEMORY_LIMIT', '256M');
  define('WP_MAX_MEMORY_LIMIT', '512M');
  define('AUTOMATIC_UPDATER_DISABLED', true);
  define('WP_CACHE', true);
  define('WP_REDIS_HOST', 'redis');
  define('WP_REDIS_PORT', 6379);
  define('WP_ENVIRONMENT_TYPE', 'production');

# Domain Configuration
DOMAIN=example.com
DOMAIN_WWW=www.example.com
DOMAIN_EMAIL=your-email@example.com

# SSL Configuration
SSL_STAGING=0  # Set to 1 for testing
SSL_KEY_SIZE=4096

# Nginx Configuration
NGINX_RESOLVER=8.8.8.8 8.8.4.4
NGINX_RESOLVER_TIMEOUT=5s
SSL_SESSION_TIMEOUT=1d
SSL_SESSION_CACHE=shared:SSL:50m
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
NGINX_CLIENT_MAX_BODY_SIZE=100M

# PHP Configuration
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_FILESIZE=64M
PHP_POST_MAX_SIZE=64M
PHP_MAX_INPUT_VARS=3000

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/backup

# Security Configuration
SECURE_AUTH_KEY=your-unique-phrase-1
AUTH_KEY=your-unique-phrase-2
LOGGED_IN_KEY=your-unique-phrase-3
NONCE_KEY=your-unique-phrase-4
AUTH_SALT=your-unique-phrase-5
SECURE_AUTH_SALT=your-unique-phrase-6
LOGGED_IN_SALT=your-unique-phrase-7
NONCE_SALT=your-unique-phrase-8 